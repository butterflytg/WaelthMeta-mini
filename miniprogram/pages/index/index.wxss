.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
}

.chat-container {
  flex: 1;
  padding: 20rpx;
  overflow: hidden;
}

.chat-list {
  height: 100%;
}

.message {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.user-message {
  align-items: flex-end;
}

.assistant-message {
  align-items: flex-start;
}

.message-content {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
}

.user-message .message-content {
  background: #007AFF;
  color: white;
}

.assistant-message .message-content {
  background: white;
  color: #333;
}

.input-container {
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #eee;
}

.style-picker {
  padding: 10rpx 0;
  text-align: center;
  color: #666;
}

.input-box {
  display: flex;
  align-items: center;
  background: #f6f6f6;
  border-radius: 10rpx;
  padding: 10rpx;
}

input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #007AFF;
  color: white;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 0;
  padding: 0;
}

.send-btn[disabled] {
  background: #ccc;
  color: #fff;
}

/* 加载动画样式 */
.loading {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #007AFF;
  border-radius: 50%;
  margin: 0 6rpx;
  animation: bounce 1.4s infinite ease-in-out;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% { 
    transform: scale(0);
  } 
  40% { 
    transform: scale(1.0);
  }
} 